    <div class="container">
      <div class="rounded p-5 my-5 mx-auto bg-col-sha-w">
        <div class="form-heading text-center">
            <span class="display-3"><i class="fa fa-user-plus" aria-hidden="true"></i></span>
            <h1 class="display-4">Register</h1>
        </div>
          <div class="form">
              <form action="/user/registration" method="post" id="registration-form">
                <div class="form-group">
                    <label class="control-label text-capitalize">user name</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></span>
                        <input class="form-control" type="text" name="uname" placeholder="User Name">
                    </div>
                </div>
                  <div class="form-group">
                      <label class="control-label text-capitalize">first name</label>
                      <div class="input-group">
                          <span class="input-group-addon"><i class="fa fa-user-o" aria-hidden="true"></i></span>
                          <input class="form-control" type="text" name="fname" placeholder="First Name">
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="control-label text-capitalize">last name</label>
                      <div class="input-group">
                          <span class="input-group-addon"><i class="fa fa-user-o" aria-hidden="true"></i></span>
                          <input class="form-control" type="text" name="lname" placeholder="Last Name">
                      </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label text-capitalize">e-mail</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></i></span>
                        <input class="form-control" type="email" name="email" placeholder="Email Id">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label text-capitalize">password</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
                        <input class="form-control" type="password" name="pass" id="pass" placeholder="Password">
                    </div>
                </div>
                  <div class="form-group">
                      <label class="control-label text-capitalize">confirm password</label>
                      <div class="input-group">
                          <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
                          <input class="form-control" type="password" name="confpass" placeholder="Password">
                      </div>
                  </div>
                  <div class="form-check">
                      <label class="form-check-label">
                          <input type="checkbox" class="form-check-input" name="tac">
                          Accept Terms & Conditions
                      </label>
                  </div>
                    <input class="btn btn-info btn-lg btn-block mt-3" type="submit" value="Register">
              </form>
          </div>
      </div>
</div>

<% include partials/footer %>
